/*
 * animation compatible con chrome
 */
animation()
  -webkit-animation arguments
  -moz-animation arguments
  -ms-animation arguments
  animation arguments

/*
 * Estilo para bloque
 */
block-alert(b_color)
  background lighten(b_color, 50%)
  border 1px solid b_color
  border-radius 4px;
  box-shadow 0 0 1px 1px rgba(b_color, .3);
  color darken(b_color, 60%)
  margin 0 0 margin-min
  padding padding-regular
  .close
    background transparent
    border none
    color darken(b_color, 60%)
    cursor pointer
    float right
    font-size 1.375em
    font-weight bold
    line-height 1
    opacity .6
    &:focus
    &:hover
      outline none
      opacity .9

change-style-alert(b_color)
  background lighten(b_color, 50%)
  border-color  b_color
  box-shadow 0 0 1px 1px rgba(b_color, .3);
  color darken(b_color, 60%)
  .close
    color darken(b_color, 60%)

/*
 * border-radius compatible con chrome y firefox
 */
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

/*
 * box-shadow compatible con chrome y firefox
 */
box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

/*
 * Estilos base para un boton
 */
button-base()
  border 1px solid transparent
  border-radius 2px
  cursor pointer
  display inline-block
  font-size 12px
  font-style normal
  font-weight bold
  line-height 28px
  min-width 30px
  outline 0 none #fff
  position relative
  text-align center
  text-decoration none
  text-shadow 0 1px 0 rgba(0,0,0,0.0980)
  text-transform none
  transition all 250ms linear
  vertical-align middle
  visibility visible
  white-space nowrap
  z-index 1
  &:active
  &:focus
  &:hover
  &:visited
    outline none
    text-decoration none
  i.fa
    color color-text-clear

/*
 * estilos del boton 1
 * b_color color de fondo del boton
 * t_color color del texto
 * m_size tamaño del margin
 * p_size tamaño del padding
 */
button-1-style(b_color=grayClouds, t_color=#000, m_size=0, p_size=0 1em)
  box-shadow 0 1px 0 0 rgba(darken(b_color, 90%), .047);
  color t_color
  gradientLinear b_color darken(b_color, 4%)
  margin m_size
  padding p_size
  transition all 0
  &:hover
  &:focus
    background lighten(b_color, 3%)
    border-bottom-color darken(b_color, 25%)
    box-shadow 0 -1px 0 darken(b_color, 25%) inset
    color t_color
  &:active
    background darken(b_color, 10%)
    border-top-color darken(b_color, 25%)
    box-shadow 0 1px 0 darken(b_color, 25%) inset

