/*
 * Degradado lineal conpatible con diversas versiones de navegadores
 */
gradientLinear(color1=white, color2=darken(white, 2%), alineacion=top )
  background-color color1 // Old browsers
  background -moz-linear-gradient(alineacion, color1 0%, color2 100%) // FF3.6+
  background -webkit-gradient(linear, left top, left bottom, color-stop(0%,color1), color-stop(100%,color2)) // Chrome,Safari4+
  background -webkit-linear-gradient(alineacion, color1 0%, color2 100%) // Chrome10+,Safari5.1+
  background -o-linear-gradient(alineacion, color1 0%, color2 100%) // Opera 11.10+
  background -ms-linear-gradient(alineacion, color1 0%, color2 100%) // IE10+
  background linear-gradient(alineacion, color1 0%, color2 100%) // W3C

/*
 * conpatibilidad de transition con chrome, firefox y opera
 */
transition()
  -webkit-transition arguments
  -moz-transition arguments
  -o-transition arguments
  transition arguments

