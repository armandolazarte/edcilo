@-webkit-keyframes pulse
  to
    box-shadow 0 0 0 20px rgba(color-dark, 0)
@-moz-keyframes pulse
  to
    box-shadow 0 0 0 20px rgba(color-dark, 0)
@-ms-keyframes pulse
  to
    box-shadow 0 0 0 20px rgba(color-dark, 0)
@keyframes pulse
  to
    box-shadow 0 0 0 20px rgba(color-dark, 0)

.pulse
  box-shadow 0 0 0 0 rgba(color-neutral, 1)
  animation pulse 1.25s infinite cubic-bezier(0.66, 0, 0, 1)
  &.primary
    box-shadow 0 0 0 0 rgba(color-principal, 1)
  .info
    box-shadow 0 0 0 0 rgba(color-info, 1)
  &.success
    box-shadow 0 0 0 0 rgba(color-success, 1)
  &.alert
    box-shadow 0 0 0 0 rgba(color-alert, 1)
  &.danger
    box-shadow 0 0 0 0 rgba(color-danger, 1)
  &:hover
    animation none